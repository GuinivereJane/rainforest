<div class="review <%=review.id%>">
  <%= review.comment %>
  <% if review.user != nil %>
      <em> by <%= review.user.email %></em>
      Added on: <%= review.created_at %>

      <%= link_to "Edit", edit_product_review_path(@product, review), remote: :true %> |
      <%= link_to "Delete", product_review_path(@product, review), method: :delete,
      data: {confirm: "Are you sure you want to delete this review?"} %>
    <%end %>
</div>
