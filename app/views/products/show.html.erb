
<div class = "flex-container">
  <div class = "flex-item"> NAME : <%=@product.name%></div>
  <div class = "flex-item">DESCRIPTION : <%=@product.description%></div>
  <div class = "flex-item">COST IN SENSE : <%=@product.formatted_price%></div>
  <%= link_to "Back to Products", products_path %> |
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Delete", @product, method: :delete,
    data: {confirm: "Are you sure you want to delete this product?"}  %>
  <%= link_to "Add a review", new_product_review_path(@product) %>
  <%= render @product.reviews %>
</div>


<%#render '/reviews/show', locals: {reviews: @product.reviews, product: @product} %>
